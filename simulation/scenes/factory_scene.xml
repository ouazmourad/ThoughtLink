    <!-- Pallet 2 (empty destination) -->
    <geom name="pallet_2" type="box" size="0.5 0.4 0.05" pos="1.5 1 0.05" material="pallet_wood"/>

    <!-- ============ SAFETY BOLLARDS ============ -->
    <geom name="bollard_1" type="cylinder" size="0.06 0.4" pos="-2 0.5 0.4" material="safety_stripe"/>
    <geom name="bollard_2" type="cylinder" size="0.06 0.4" pos="-2 -0.5 0.4" material="safety_stripe"/>
    <geom name="bollard_3" type="cylinder" size="0.06 0.4" pos="2 0.5 0.4" material="safety_stripe"/>
    <geom name="bollard_4" type="cylinder" size="0.06 0.4" pos="2 -0.5 0.4" material="safety_stripe"/>

