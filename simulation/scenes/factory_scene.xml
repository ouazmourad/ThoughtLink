    <geom name="conv_leg_1" type="box" size="0.04 0.04 0.35" pos="-1.5 -3.75 0.35" material="conveyor_frame"/>
    <geom name="conv_leg_2" type="box" size="0.04 0.04 0.35" pos="1.5 -3.75 0.35" material="conveyor_frame"/>
    <geom name="conv_leg_3" type="box" size="0.04 0.04 0.35" pos="-1.5 -3.25 0.35" material="conveyor_frame"/>
    <geom name="conv_leg_4" type="box" size="0.04 0.04 0.35" pos="1.5 -3.25 0.35" material="conveyor_frame"/>
