    <geom name="conv_box1" type="box" size="0.12 0.1 0.08" pos="-0.8 -3.5 0.82" material="box_cardboard"/>
    <geom name="conv_box2" type="box" size="0.1 0.08 0.1" pos="0 -3.5 0.84" material="box_blue"/>
    <geom name="conv_box3" type="box" size="0.14 0.12 0.09" pos="0.7 -3.5 0.83" material="box_red"/>

