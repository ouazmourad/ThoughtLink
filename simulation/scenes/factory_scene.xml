    <geom name="sA_shelf_2" type="box" size="0.65 0.35 0.015" pos="-3.5 -2 1.6" material="shelf_metal"/>
    <geom name="sA_shelf_3" type="box" size="0.65 0.35 0.015" pos="-3.5 -2 2.4" material="shelf_metal"/>
    <!-- Braces -->
    <geom name="sA_brace_1" type="box" size="0.6 0.01 0.01" pos="-3.5 -2.3 1.2" material="shelf_beam"/>
    <geom name="sA_brace_2" type="box" size="0.6 0.01 0.01" pos="-3.5 -2.3 2.0" material="shelf_beam"/>
