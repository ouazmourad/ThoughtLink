    <geom name="conv_rail_L" type="box" size="1.6 0.02 0.05" pos="0 -3.2 0.77" material="conveyor_frame"/>
    <geom name="conv_rail_R" type="box" size="1.6 0.02 0.05" pos="0 -3.8 0.77" material="conveyor_frame"/>
