<mujoco model="g1_factory_scene">
  <include file="model.xml"/>

  <statistic center="0 0 1.0" extent="6.0"/>

  <visual>
    <headlight diffuse="0.5 0.5 0.5" ambient="0.3 0.3 0.3" specular="0.1 0.1 0.1"/>
    <rgba haze="0.15 0.2 0.25 1"/>
    <global azimuth="-130" elevation="-25"/>
    <quality shadowsize="4096"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="flat" rgb1="0.2 0.2 0.25" rgb2="0.1 0.1 0.15" width="512" height="3072"/>
    <texture type="2d" name="factory_floor" builtin="checker" mark="edge"
      rgb1="0.35 0.35 0.33" rgb2="0.30 0.30 0.28"
      markrgb="0.4 0.4 0.38" width="512" height="512"/>
    <material name="factory_floor" texture="factory_floor" texuniform="true" texrepeat="8 8" reflectance="0.1"/>
    <material name="lane_yellow" rgba="0.85 0.7 0.1 1" reflectance="0.05"/>
    <material name="shelf_metal" rgba="0.45 0.5 0.55 1" specular="0.3" shininess="0.5"/>
    <material name="shelf_beam" rgba="0.2 0.35 0.6 1" specular="0.2" shininess="0.3"/>
    <material name="box_cardboard" rgba="0.72 0.58 0.38 1" specular="0.05"/>
    <material name="box_blue" rgba="0.2 0.35 0.65 1" specular="0.1"/>
    <material name="box_red" rgba="0.7 0.15 0.1 1" specular="0.1"/>
    <material name="box_green" rgba="0.15 0.5 0.2 1" specular="0.1"/>
    <material name="pallet_wood" rgba="0.6 0.45 0.25 1" specular="0.05"/>
    <material name="wall_concrete" rgba="0.55 0.55 0.52 1" specular="0.05"/>
    <material name="pillar_concrete" rgba="0.5 0.5 0.48 1" specular="0.05"/>
    <material name="safety_stripe" rgba="0.9 0.75 0.0 1"/>
    <material name="conveyor_belt" rgba="0.15 0.15 0.18 1" specular="0.1"/>
    <material name="conveyor_frame" rgba="0.4 0.4 0.42 1" specular="0.2"/>
    <material name="table_top" rgba="0.5 0.5 0.52 1" specular="0.15"/>
  </asset>

  <worldbody>
    <!-- ============ LIGHTING ============ -->
    <light pos="0 0 3.5" dir="0 0 -1" directional="true" diffuse="0.6 0.6 0.55" castshadow="true"/>
    <light pos="-3 0 3.0" dir="0.3 0 -1" diffuse="0.3 0.3 0.28" castshadow="false"/>
    <light pos="3 0 3.0" dir="-0.3 0 -1" diffuse="0.3 0.3 0.28" castshadow="false"/>

    <!-- ============ FLOOR ============ -->
    <geom name="floor" size="8 8 0.05" type="plane" material="factory_floor"/>
    <!-- Yellow lane markings -->
    <geom name="lane_center" type="box" size="0.05 4 0.001" pos="0 0 0.001" material="lane_yellow" contype="0" conaffinity="0"/>
    <geom name="lane_cross" type="box" size="4 0.05 0.001" pos="0 0 0.001" material="lane_yellow" contype="0" conaffinity="0"/>

    <!-- ============ BACK WALL ============ -->
    <geom name="back_wall" type="box" size="8 0.1 2.0" pos="0 -6 2.0" material="wall_concrete"/>

    <!-- ============ PILLARS ============ -->
    <geom name="pillar_1" type="box" size="0.15 0.15 2.0" pos="-4 -4 2.0" material="pillar_concrete"/>
    <geom name="pillar_2" type="box" size="0.15 0.15 2.0" pos="4 -4 2.0" material="pillar_concrete"/>

    <!-- ============ SHELF RACK A (left side) ============ -->
