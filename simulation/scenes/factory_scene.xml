    <geom name="sB_box3" type="box" size="0.15 0.12 0.12" pos="3.35 -2 1.73" material="box_red"/>
    <geom name="sB_box4" type="box" size="0.12 0.12 0.15" pos="3.7 -2 1.77" material="box_green"/>

    <!-- ============ CONVEYOR BELT (center back) ============ -->
